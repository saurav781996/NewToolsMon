<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewToolsMon" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>



    <style name="Theme.NewToolsMon" parent="Base.Theme.NewToolsMon">
        <item name="android:statusBarColor">@color/app_blue</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>



    <style name="Theme.NewToolsMon2" parent="Base.Theme.NewToolsMon">
        <item name="android:fontFamily">@font/pacifico</item>
        <item name="android:statusBarColor">@color/app_blue</item>
    </style>





    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>


    <style name="TimerMessageStyle">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/DarkRed</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="NumberTextViewsStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="text_small" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/sfpro_regular</item>
    </style>

    <style name="text_small_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/sf_pro_bold</item>
    </style>

    <style name="text_normal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/sfpro_regular</item>
    </style>

    <style name="text_normal_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/sf_pro_bold</item>
    </style>

    <style name="text_heading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_heading_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/sf_pro_bold</item>
    </style>




</resources>