<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AliceBlue">


    <RelativeLayout
        android:id="@+id/relative_sec"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Hash Generator"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_sec"
        android:layout_centerInParent="true">





        <ScrollView
            android:layout_above="@+id/generate_hash_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/buttons_sec"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MD5 key"
                        style="@style/text_heading_bold" />

                    <TextView
                        android:id="@+id/md5_string"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="22dp"
                        android:layout_marginBottom="20dp"
                        android:text="Touch to Copy"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHA 1 Key"
                        style="@style/text_heading_bold" />

                    <TextView
                        android:id="@+id/sha1_string"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="22dp"
                        android:layout_marginBottom="20dp"
                        android:text="Touch to Copy"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHA 256 Key"
                        style="@style/text_heading_bold" />

                    <TextView
                        android:id="@+id/sha256_string"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="22dp"
                        android:layout_marginBottom="20dp"
                        android:text="Touch to Copy"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                </LinearLayout>








                <EditText
                    android:id="@+id/idEdt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_white"
                    android:layout_marginBottom="50dp"
                    android:autofillHints=""
                    android:hint="Enter your text"
                    android:inputType="text" />






            </LinearLayout>

        </ScrollView>


        <Button
            android:id="@+id/generate_hash_key"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            android:text="Generate Hash" />


    </RelativeLayout>


</RelativeLayout>
