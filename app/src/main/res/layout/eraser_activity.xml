<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AliceBlue">

    <RelativeLayout
        android:id="@+id/relative_sec"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Memory Sanitizer"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:onClick="memory_seni_info"
            android:src="@drawable/baseline_info_24"
            app:tint="@color/white" />

    </RelativeLayout>




    <LinearLayout
        android:id="@+id/sec_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:orientation="vertical">



        <TextView
            android:visibility="gone"
            android:id="@+id/txtPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Storage"
            android:textSize="24sp"
            android:typeface="normal" />


        <TextView
            android:visibility="gone"
            android:id="@+id/txtInfoPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_heading_bold"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/txtPrimary"
            android:textColor="@color/app_blue"
            android:layout_centerHorizontal="true"
            android:text="Memory info"
            android:textSize="14sp" />



        <TextView
            android:id="@+id/txtStatusPrimary"
            android:gravity="center"
            style="@style/text_heading_bold"
            android:background="@drawable/border_edittext"
            android:padding="5dp"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status" />



        <TextView
            android:id="@+id/space"
            android:gravity="center"
            style="@style/text_heading_bold"
            android:background="@drawable/border_edittext"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status" />


    </LinearLayout>



        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="bottom"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/prgPrimary"
                style="@style/text_heading_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="150dp" />


            <TextView
                style="@style/text_heading_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="50dp" />

            </LinearLayout>






    <Button
        android:id="@+id/btnPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:enabled="false"
        android:text="Start" />


</RelativeLayout>
