<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.github.nikartm.button.FitButton
                android:id="@+id/torch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:padding="10dp"
                app:fb_backgroundColor="#FFFFFF"
                app:fb_cornerRadius="24dp"
                app:fb_icon="@drawable/flashlight"
                app:fb_iconHeight="205dp"
                app:fb_iconWidth="205dp"
                app:fb_rippleColor="#00445E"
                app:fb_shape="rectangle"
                app:fb_text=""
                app:fb_textColor="#F5F5F5"
                app:fb_textSize="20dp"
                app:fb_textStyle="bold" />


            <com.github.nikartm.button.FitButton
                android:id="@+id/display_torch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:padding="10dp"
                app:fb_backgroundColor="#6D4CAF50"
                app:fb_cornerRadius="24dp"
                app:fb_icon="@drawable/bright"
                app:fb_iconHeight="205dp"
                app:fb_iconWidth="205dp"
                app:fb_rippleColor="#00445E"
                app:fb_shape="rectangle"
                app:fb_text=""
                app:fb_textColor="#F5F5F5"
                app:fb_textSize="20dp"
                app:fb_textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>